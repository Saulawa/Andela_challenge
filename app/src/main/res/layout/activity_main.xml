<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">


    <Button
            android:background="@color/andelacolor"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:elevation="4dp"
            android:textSize="26sp"
            android:text="About ALC"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/aboutandela" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" android:layout_marginTop="242dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:textSize="26sp"
            android:text="My Profile"
            android:layout_width="200dp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:textColor="@android:color/white"
            android:background="@color/profilecolor"
            android:layout_height="wrap_content"
            android:id="@+id/profile" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutandela" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="50dp" android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginRight="50dp"
            app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/andelacolor"
            android:textSize="32sp"
            android:textStyle="bold|italic"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>